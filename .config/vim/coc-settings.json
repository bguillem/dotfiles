{
    "languageserver": {
    "haskell": {
        "command": "haskell-language-server-wrapper",
        "args": ["--lsp"],
        "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
        "filetypes": ["hs","lhs","haskell", "lhaskell"]
    }
    },
    "suggest.enablePreselect": true,
    "coc.preferences.enableMarkdown": true,
    "coc.preferences.formatOnInsertLeave": true,
    "coc.preferences.hoverTarget": "echo",
    "codeLens.enable": true,
    "metals.statusBarEnabled": true,
    "metals.showImplicitArguments": true,
    "metals.showInferredType": true
}
